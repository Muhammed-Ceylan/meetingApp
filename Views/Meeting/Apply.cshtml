@model UserInfo
@{
ViewBag.Title = "Toplantı Katılım Formu";
}
<h1 class="h4">Toplantı Katılım Formu</h1>
<form method="post" action="/Meeting/Apply" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name">Ad Soyad</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Phone">Telefon</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email">E-posta</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAtend">Katılım Durumu</label>
        <select asp-for="WillAtend" class="form-select">
            <option value="">Durum Seçiniz</option>
            <option value="true">Evet, Geliyorum.</option>
            <option value="false">Hayır, Gelmiyorum.</option>
        </select>
    </div>


    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>