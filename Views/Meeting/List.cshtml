@model List<UserInfo>
    @{
    ViewBag.Title = "Toplantıya Katılım Listesi";
    }
    <h1 class="h4">Toplantıya Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Telefon</td>
                <td>Katılım Durumu</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach(var user in @Model)
            {
            var status = user.WillAtend == true ? "Evet":"Hayır";
            var className = user.WillAtend == true ? "table-success":"table-danger";

            @if(user.WillAtend == true)
            {
            i++;
            }
            <tr class="@className">
                <td>@user.Name</td>
                <td>@user.Phone</td>
                <td>@status</td>
                <td>
                    <a href="/Meeting/Details/@user.Id" class="btn btn-sm btn-primary">Detay</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı: @i</span>
        </div>
    </div>