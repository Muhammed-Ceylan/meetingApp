@model UserInfo
@{
ViewBag.Title = "Başvuru Durumu";
}
<h1 class="h4">Başvuru Durumu</h1>

@if(Model.WillAtend == true)
{
<p>Teşekkürler, @Model.Name toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
<a href="/Meeting/List" class="btn btn-sm btn-outline-primary">Kullanıcı Listele</a>
}
else
{
<p>@Model.Name,toplantıya katılmadığınız için üzgünüz.</p>
<a href="/Meeting/Apply" class="btn btn-sm btn-outline-primary">Başvuru Formu</a>
}